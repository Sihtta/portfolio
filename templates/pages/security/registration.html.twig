{% extends 'base.html.twig' %}

{% block title %}
	Portfolio - Inscription
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="mt-4">Formulaire d'inscription</h1>

		{{ form_start(form, { 'attr': { 'id': 'registrationForm' } }) }}

		<div class="floating-label">
			{{ form_widget(form.fullName, { 'attr': { 'placeholder': 'Nom / Prénom' } }) }}
			<label for="registration_fullName">Nom / Prénom</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
					<path d="M12 12c2.7 0 5-2.3 5-5s-2.3-5-5-5-5 2.3-5 5 2.3 5 5 5zm0 2c-3.9 0-7 3.1-7 7h14c0-3.9-3.1-7-7-7z"/>
				</svg>
			</div>
			{{ form_errors(form.fullName) }}
		</div>

		<div class="floating-label">
			{{ form_widget(form.pseudo, { 'attr': { 'placeholder': 'Pseudo (Facultatif)' } }) }}
			<label for="registration_pseudo">Pseudo (Facultatif)</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
					<path d="M12 12c2.7 0 5-2.3 5-5s-2.3-5-5-5-5 2.3-5 5 2.3 5 5 5zm0 2c-3.9 0-7 3.1-7 7h14c0-3.9-3.1-7-7-7z"/>
				</svg>
			</div>
			{{ form_errors(form.pseudo) }}
		</div>

		<div class="floating-label">
			{{ form_widget(form.email, { 'attr': { 'placeholder': 'Adresse email' } }) }}
			<label for="registration_email">Adresse email</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 100 100">
					<g transform="translate(0 -952.36)">
						<path d="m17.5 977c-1.3 0-2.4 1.1-2.4 2.4v45.9c0 1.3 1.1 2.4 2.4 2.4h64.9c1.3 0 2.4-1.1 2.4-2.4v-45.9c0-1.3-1.1-2.4-2.4-2.4h-64.9zm2.4 4.8h60.2v1.2l-30.1 22-30.1-22v-1.2zm0 7l28.7 21c0.8 0.6 2 0.6 2.8 0l28.7-21v34.1h-60.2v-34.1z"/>
					</g>
				</svg>
			</div>
			{{ form_errors(form.email) }}
		</div>

		<div class="floating-label">
			{{ form_widget(form.plainPassword.first, { 'attr': { 'placeholder': 'Mot de passe' } }) }}
			<label for="registration_plainPassword_first">Mot de passe</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
					<path d="M19,21H5V9h14V21z M6,20h12V10H6V20z"/>
					<path d="M16.5,10h-1V7c0-1.9-1.6-3.5-3.5-3.5S8.5,5.1,8.5,7v3h-1V7c0-2.5,2-4.5,4.5-4.5s4.5,2,4.5,4.5V10z"/>
					<path d="m12 16.5c-0.8 0-1.5-0.7-1.5-1.5s0.7-1.5 1.5-1.5 1.5 0.7 1.5 1.5-0.7 1.5-1.5 1.5zm0-2c-0.3 0-0.5 0.2-0.5 0.5s0.2 0.5 0.5 0.5 0.5-0.2 0.5-0.5-0.2-0.5-0.5-0.5z"/>
				</svg>
			</div>
			{{ form_errors(form.plainPassword.first) }}
		</div>

		<div class="floating-label">
			{{ form_widget(form.plainPassword.second, { 'attr': { 'placeholder': 'Confirmation du mot de passe' } }) }}
			<label for="registration_plainPassword_second">Confirmation du mot de passe</label>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
					<path d="M19,21H5V9h14V21z M6,20h12V10H6V20z"/>
					<path d="M16.5,10h-1V7c0-1.9-1.6-3.5-3.5-3.5S8.5,5.1,8.5,7v3h-1V7c0-2.5,2-4.5,4.5-4.5s4.5,2,4.5,4.5V10z"/>
					<path d="m12 16.5c-0.8 0-1.5-0.7-1.5-1.5s0.7-1.5 1.5-1.5 1.5 0.7 1.5 1.5-0.7 1.5-1.5 1.5zm0-2c-0.3 0-0.5 0.2-0.5 0.5s0.2 0.5 0.5 0.5 0.5-0.2 0.5-0.5-0.2-0.5-0.5-0.5z"/>
				</svg>
			</div>
			{{ form_errors(form.plainPassword.second) }}
		</div>

		{{ form_widget(form._token) }}


		{{ form_end(form) }}
	</div>
{% endblock %}
